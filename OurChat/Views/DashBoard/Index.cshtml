@model IEnumerable<MemberEditionViewModel>
@{
    ViewData["Title"] = "Members";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="container-fluid">
        <h3 class="page-title">Members</h3>
        <div class="row">
            <div class="col-md-12">
                <!-- BASIC TABLE -->
                <div class="panel">
                    <div class="panel-heading">                        
                        <a asp-action="Create" asp-controller="DashBoard" class="btn btn-info"><i class="fa fa-user"></i> New Member</a>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Picture</th>
                                    <th>Full Name</th>
                                    <th>Username</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model)
                                {
                                <tr>
                                    <td>@member.ID</td>
                                    <td>
                                        <div class="account">
                                            <div class="user">
                                                <img src="/images/chat/avatar/@member.PicturePath" class="user-picture" alt="">                                               
                                            </div>
                                            
                                        </div>
                                    </td>
                                    <td>@member.Fname @member.Lname</td>
                                    <td>@member.Email</td>

                                    <td> 
                                        <a asp-action="Edit" asp-controller="DashBoard" asp-route-id="@member.ID" class="btn btn-info"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                                }
                                     
                                </tbody>
                        </table>
                    </div>
                </div>
                <!-- END BASIC TABLE -->
            </div>

        </div>
    </div>
</div>
<style>

    .account {
        float: left;
        padding-left: 5px;
        padding-bottom: 5px;
    }

    .user {
        float: left;
        position: relative;
    }

    .account .user-picture {
        border-color: #53c265;
    }

    .user-picture {
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        border-radius: 50%;
        width: 55px;
        height: 55px;
        border: 2px solid transparent;
    }

    .user .position-number {
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        border-radius: 50%;
        display: block;
        position: absolute;
        bottom: -6px;
        right: -8px;
        width: 28px;
        height: 28px;
        line-height: 22px;
        color: #fff;
        font-size: 12px;
        text-align: center;
        border: 2px solid #fff;
        background-color: #0af;
    }

    .selection-hidden {
        visibility: hidden;
        display: none;
    }
</style>

